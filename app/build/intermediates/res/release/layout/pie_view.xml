<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.androidplot.pie.PieChart
        android:id="@+id/mySimplePieChart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        androidPlot.title="Received / Transmitted data"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rx data: "
            android:editable="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />
        <TextView
            android:id="@+id/txTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tx data: "
            android:editable="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Documents/GitHub/SendDirect/app/src/main/res/layout/pie_view.xml -->